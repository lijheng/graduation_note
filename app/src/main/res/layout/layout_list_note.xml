<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/note_title"
        android:layout_width="296dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/note_content_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/note_content_text"
        android:layout_width="296dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/note_content_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_title" />

    <TextView
        android:id="@+id/note_time"
        android:layout_width="296dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/note_content_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/note_content_img"
        app:layout_constraintTop_toBottomOf="@+id/note_content_text" />

    <ImageView
        android:id="@+id/note_content_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
